{template 'member', 'header'}
<div class="x-content">
	<div class="main-info">
			<div class="blue-tool">
				<a href="index.php?m=message&c=index&a=send&t={$t}&pt={$pt}&menu=1" class="blue-bt red-bt xfr">+发送消息</a>
			</div>
			<div class="table-widget">
				<table  cellspacing="0" cellpadding="0" class="textc">
					<tr>
						<th class="w50">序号</th>
						<th class="w300">标题</th>
						<th class="w150">发送时间</th>
					</tr>

				
					{php $index=0}
					{loop $infos $info}
					{php $index++}
                    <!--{php print_r($info)}-->
					<tr>
						<td align="center" class="pdl10">
							{$index}
						</td>
						<td align="left" class="pdl10">
							<a href="?m=message&c=index&a=read_group&group_id={$info['id']}&t={$t}&pt={$pt}&menu=1">{if $status[$info['id']]==0}<font color=red><b>{$info['subject']}</b></font>{else}{$info['subject']}{/if}</a>
						</td>
						<td align="center">{date('Y-m-d h:m:s',$info['inputtime'])}</td>
					</tr>
					{/loop}
					
				</table>
			
 				<div id="pages"> {$pages}</div>
			</div>
		</div>
	</div>
<script type="text/javascript">
function read(id, name) {
	window.top.art.dialog({id:'sell_all'}).close();
	window.top.art.dialog({title:'查看详情'+name+' ',id:'edit',iframe:'?m=message&c=index&a=read&messageid='+id,width:'700',height:'450'}, function(){var d = window.top.art.dialog({id:'see_all'}).data.iframe;var form = d.document.getElementById('dosubmit');form.click();return false;}, function(){window.top.art.dialog({id:'see_all'}).close()});
}
function checkuid() {
	var ids='';
	$("input[name='messageid[]']:checked").each(function(i, n){
		ids += $(n).val() + ',';
	});
	if(ids=='') {
		window.top.art.dialog({content:'请选择再执行操作',lock:true,width:'200',height:'50',time:1.5},function(){});
		return false;
	} else {
		myform.submit();
	}
}

</script>

